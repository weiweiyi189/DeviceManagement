<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="equipmentManagementSystem.Mybatis.EquipmentMapper">

<!--         type指向javabean类，id可自定义 -->
        <resultMap id="equipmentMap" type="equipmentManagementSystem.entity.Equipment" >
            <!-- property对应实体类的属性名称，column为数据库字段名 -->
            <result column="internal_number" property="internalNumber"/>
            <result column="type_id" property="type.id"/>
            <association property="user" javaType="equipmentManagementSystem.entity.Equipment">
                <id column="user_id" property="id"></id>
                <result column="name" property="name"></result>
                <result column="pwd" property="pwd"></result>
                <result column="phone" property="phone"></result>
                <result column="head_img" property="head_img"></result>
                <result column="create_time_u" property="create_time"></result>
            </association>
        </resultMap>
    <select id="findAll" resultMap="equipmentMap">-
        select *
        from equipment
    </select>

    <delete id="deleteById" parameterType="Long">
        delete
        from equipment
        where id=#{id}
    </delete>

    <select id="findById" resultMap="equipmentMap">
        select *
        from equipment
        where id=#{id}
    </select>
</mapper>